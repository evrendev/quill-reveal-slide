{
  "name": "quill-reveal-slide",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "description": "A custom Quill.js module for tags, built with TypeScript and Vite.",
  "main": "./dist/quill-tags.umd.js",
  "module": "./dist/quill-tags.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/quill-tags.es.js",
      "require": "./dist/quill-tags.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "quill": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/quill": "^2.0.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "quill": "^2.0.3"
  },
  "keywords": [
    "quill",
    "quilljs",
    "typescript",
    "module",
    "tags"
  ]
}
